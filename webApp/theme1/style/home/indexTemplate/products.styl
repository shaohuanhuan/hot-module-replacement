.newest-products
  margin-top 120px
  position relative
  .backTop
    position absolute
    bottom 150px
    right -20px
    cursor pointer
    color #d8d8d8
  .backTop:hover
    color #359AF6
  .title
    font-family HelveticaNeueLTPro-Bd,sans-serif
    font-weight bold
    text-align center
    font-size 30px
    color: #000
    line-height 85px
    .title-line
      display block
      margin 0 auto
      width 40px
      height 5px
      background $mainColor
  .productList
    .p-list
      padding 10px
      margin-bottom 10px
      border 1px solid $white
      overflow hidden
      a:hover
        color: #359AF6
        text-decoration none
      .img-container
        padding-bottom 100%
        position relative
        overflow hidden
        img
          position absolute
          top 0
          transition all 0.6s
          width 100%
      .p-title
        height 40px
        font-size 14px
        font-weight 600
        overflow hidden
        text-overflow ellipsis
        display -webkit-box
        -webkit-box-orient vertical
        -webkit-line-clamp 2
        color: #000
        margin-top 16px
  .p-list:hover
      border 1px solid $grayOOO
  .showMore-products
    text-align center
    font-size 13px
    margin-top 30px
.list-loading
  margin-bottom 60px
  .img-container
    background $loadingBg
    padding-bottom 100%
    width 100%
  .p-title
    background $loadingBg
    width 100%
    height 20px
    margin-top 10px
    border-radius 10px
@media screen and (max-width: 768px)
  .newest-products
    margin-top 35px
    .title
      font-size 26px
