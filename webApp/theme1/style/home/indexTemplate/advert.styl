.guide-container
  padding-left 0
  padding-right 0
  margin-top 30px
  .guide-img
    width 100%
    overflow hidden
    .img{
      overflow hidden
      position relative
      .img-holder{
        display inline-block
        height 300px
        width: 100%
        background #eff0f1
      }
    }
    .img-box{
      position relative
      overflow hidden
    }
    img
      display inline-block
      width 100%
      height 100%
      max-height 300px
      padding 0
      transition all 0.6s
    img:hover
      transform scale(1.2)
@media screen and (max-width: 768px)
  .guide-container
    margin-top 15px
    .row
      width 150%
      margin-left -25%
