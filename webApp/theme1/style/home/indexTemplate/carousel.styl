.carousel-container
  .banner-loading
    width 100%
    background $loadingBg
    .img-container
      position relative
      padding-bottom 23%
      background url('/images/banner-loading.png') no-repeat
      background-size 50% 100%
      background-position center
  #carousel-banner
    display none
    .carousel-indicators
      li
        margin-right 5px
    .carousel-inner
      //padding-bottom 23%
      position relative
      .item
        height 0px
        padding-bottom 20.83%
        a
         display inline-block
         img
           position absolute
           top 0
           width 100%
           height 100%
  .carousel-control
    background-image none
@media screen and (max-width: 768px)
  .carousel-container
    #carousel-banner
      .carousel-indicators
        display none