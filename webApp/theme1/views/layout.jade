      script.
        NProgress.start()
        var isDomain = document.domain;
        if(isDomain.indexOf('#{domain}') > -1){
          document.domain = '#{domain}';
        }
        window.apiHost = '#{apiHost}';
        var shopId = '#{shopId}';
        var them = '#{them}';
        var styles = '#{styles}';
        var version = '#{version}';
        // 获取来源
        var plat = 0;
        if(self.name.indexOf('app_runner_fb') > -1 ){ // facebook
          plat = 1;
        }
        if(self.name.indexOf('buyer-editor') > -1 ){
          plat = 2;
        }
        if (self.name.indexOf('buyer-preview') > -1) {
          plat = 3;
        }
        if (self.name.indexOf('seller-preview') > -1) {
          plat = 4;
        }
        if (plat == 2 || plat == 3 || plat == 4) {
          var layerdiv = document.createElement('div')
          document.body.appendChild(layerdiv)
          layerdiv.className = 'iframe-layer'
        }
